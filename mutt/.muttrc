# Default account
source ~/.mutt/alvarofelipemelchor.gmail

macro index <f4> '<sync-mailbox><enter-command>source ~/.mutt/alvaro.felipe91.gmail<enter><change-folder>!<enter>'
macro index <f5> '<sync-mailbox><enter-command>source ~/.mutt/alvarofelipemelchor.gmail<enter><change-folder>!<enter>'

set move = no
set smtp_authenticators = ‘gssapi:login’
set sort_aux=reverse-date-received       
set sort = threads
set sort_re
set send_charset="us-ascii:utf-8
bind index G imap-fetch-mail 
auto_view text/html
set editor=vi
set sidebar_visible = yes
set imap_check_subscribed
bind index,pager B sidebar-toggle-visible
bind index J sidebar-prev
bind index K sidebar-next
bind index O sidebar-open


